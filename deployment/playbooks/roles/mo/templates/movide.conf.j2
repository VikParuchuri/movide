# gunicorn

description "Articles Server Service"
author "Vik Paruchuri <vik.paruchuri@gmail.com>"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 3 30

env PID=/var/run/gunicorn/movide.pid
env WORKERS={{ ansible_processor_cores * 2 }}
env PORT={{ gunicorn_port }}
env LANG=en_US.UTF-8
env DJANGO_SETTINGS_MODULE={{movide_settings}}

chdir {{movide_dir}}
setuid {{movide_user}}

exec {{venv_dir}}/bin/gunicorn --preload -b 127.0.0.1:$PORT -w $WORKERS --timeout=30 --pythonpath={{movide_dir}} article_site.wsgi
